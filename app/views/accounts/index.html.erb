<%= turbo_stream_from "AccountsChannel" %>

<h1 class="display-1">Happy Smiles Dentistry</h1>

<table class="table table-striped">
  <thead class="table-dark">
    <tr>
      <th scope="col">Patient</th>
      <th scope="col"><%= link_to "Outstanding Balance", sort: "balance" %></th>
      <th scope="col">Phone Number</th>
      <th scope="col"><%= link_to "Latest Transaction Date", sort: "latest_transaction_date" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody id="accounts">
      <% @accounts.each do |account| %>
        <tr id="<%= dom_id(account) %>">
  		    <%= render partial: "account", locals: {account: account} %>
        </tr>
      <% end %>
    </tbody>
</table>
